// Definisi kelas StudentCollague
public class StudentCollague {
    // Atribut kelas
    private String nama;
    private String nim;
    private String jurusan;

    // Konstruktor kelas untuk inisialisasi objek
    public StudentCollague(String nama, String nim, String jurusan) {
        this.nama = nama;
        this.nim = nim;
        this.jurusan = jurusan;
    }

    // Metode untuk menampilkan aktivitas belajar
    public void study() {
        System.out.println(nama + " sedang membaca buku di perpustakaan.");
    }

    public static void main(String[] args) {
        // Implementasi penggunaan kelas StudentCollague
        StudentCollague Student1 = new StudentCollague("Arifah", "202301110030", "Informatika");
        StudentCollague Student2 = new StudentCollague("Anggraini", "202201110078", "Sistem Informasi");

        // Menggunakan metode objek
        Student1.study();  // Output: Arifah sedang membaca buku di perpustakaan.
        Student2.study();  // Output: Anggraini sedang membaca buku di perpustakaan.
    }
}
